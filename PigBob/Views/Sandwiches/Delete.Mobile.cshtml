@model PigBob.Models.OrderItem

@{
    ViewBag.Title = "Delete Sandwich";
}

<h2>Delete Sandwich</h2>

@if (Model.Eater.UserId == ViewBag.UserId)
{
    <h3>Are you sure you want to delete this sandwich?</h3>
    <fieldset class="ui-grid-a">
        <legend>Details</legend>

        <div class="ui-block-a">Bacon</div>
        <div class="ui-block-b">
            @Html.CheckBoxFor(model => model.Bacon, new { data_theme = "a" })
        </div>

        <div class="ui-block-a">Sausage</div>
        <div class="ui-block-b">
            @Html.CheckBoxFor(model => model.Sausage, new { data_theme = "a" })
        </div>

        <div class="ui-block-a">Egg</div>
        <div class="ui-block-b">
            @Html.CheckBoxFor(model => model.Egg, new { data_theme = "a" })
        </div>

        @if (Model.Other != string.Empty && Model.Other != null)
        {
        <div class="ui-block-a">Other</div>
        <div class="ui-block-b">
            @Html.DisplayFor(model => model.Other)
        </div>
        }

        <div class="ui-block-a">Date</div>
        <div class="ui-block-b">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </div>
    </fieldset>
    using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Delete" data-icon="alert" />
            @Html.ActionLink("Back to Order", "Index", new { id = ViewBag.OrderID }, new { data_role = "button", data_icon = "back" })
        </p>
    }
}
else
{
    <h3 style="color: Red;">You are not authorized to delete this sandwich. Please stop hacking me.</h3>
}