@model PigBob.Models.OrderItem

@{
    ViewBag.Title = "Create Your Pig Order";
}

<h2>Create Your Pig Order for @ViewBag.OrderDate.ToLongDateString()</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Sandwich Details</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bacon)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bacon)
            @Html.ValidationMessageFor(model => model.Bacon)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sausage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sausage)
            @Html.ValidationMessageFor(model => model.Sausage)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Egg)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Egg)
            @Html.ValidationMessageFor(model => model.Egg)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Other)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Other)
            @Html.ValidationMessageFor(model => model.Other)
        </div>

        @Html.HiddenFor(model => model.OrderID)

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Order", "Index", new { id = Model.OrderID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}