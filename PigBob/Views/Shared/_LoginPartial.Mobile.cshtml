@if((Request.IsAuthenticated) && (PigBob.Models.UserProfile.GetUserProfile() != null)){
    @Html.ActionLink(PigBob.Models.UserProfile.GetUserProfile().FirstName, "Index", "Account", null, new { @class = "username" })
    @Html.ActionLink("Log Off", "LogOff", "Account")
}
else
{
    @Html.ActionLink("Register", "Register", "Account", null, new { data_dialog_title = "Registration", data_icon = "plus", data_corners = "false"})
    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { data_dialog_title = "Identification", data_icon = "check", data_corners = "false"})
}